@model BDII_PF_JorgeIsaacLópezV.Models.viewModels.ListaPacientes

@{
    ViewBag.Title = "Pacientes";
}

<h2>Pacientes</h2>

@if (!string.IsNullOrEmpty(Model.Mensaje))
{
    <div class="alert alert-@(Model.TipoMensaje == "success" ? "success" : Model.TipoMensaje == "error" ? "danger" : "info") alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @Model.Mensaje
    </div>
}

<p>
    @Html.ActionLink("Crear Nuevo Paciente", "CrearPaciente", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Identificación</th>
            <th>Teléfono</th>
            <th>Género</th>
            <th>Fecha Nacimiento</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Pacientes != null && Model.Pacientes.Any())
        {
            foreach (var paciente in Model.Pacientes)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => paciente.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => paciente.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => paciente.Identificacion)</td>
                    <td>@Html.DisplayFor(modelItem => paciente.Telefono)</td>
                    <td>
                        @if (paciente.Genero == 'M')
                        {
                            <span class="label label-primary">Masculino</span>
                        }
                        else
                        {
                            <span class="label label-info">Femenino</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => paciente.Fecha_Nacimiento)</td>
                    <td>
                        @if (paciente.Activo)
                        {
                            <span class="label label-success">Activo</span>
                        }
                        else
                        {
                            <span class="label label-default">Inactivo</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "EditarPaciente", new { id = paciente.Id_Paciente }, new { @class = "btn btn-xs btn-warning" })
                        @Html.ActionLink("Detalles", "DetallesPacientes", new { id = paciente.Id_Paciente }, new { @class = "btn btn-xs btn-info" })
                        @Html.ActionLink("Citas", "Citas", new { id = paciente.Id_Paciente }, new { @class = "btn btn-xs btn-success" })
                        @Html.ActionLink("Pagos", "Pagos", new { id = paciente.Id_Paciente }, new { @class = "btn btn-xs btn-primary" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No hay pacientes registrados.</td>
            </tr>
        }
    </tbody>
</table>