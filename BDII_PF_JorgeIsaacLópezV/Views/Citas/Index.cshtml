@model BDII_PF_JorgeIsaacLópezV.Models.viewModels.ListaCitas

@{
    ViewBag.Title = "Gestión de Citas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-calendar-alt"></i> Gestión de Citas Médicas
                    </h2>
                    @Html.ActionLink("Nueva Cita", "CrearCita", null, new { @class = "btn btn-primary" })
                </div>

                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Mensaje))
                    {
                        <div class="alert alert-@(Model.TipoMensaje == "error" ? "danger" : Model.TipoMensaje) alert-dismissible fade show" role="alert">
                            @Model.Mensaje
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-@(TempData["TipoMensaje"].ToString() == "error" ? "danger" : TempData["TipoMensaje"]) alert-dismissible fade show" role="alert">
                            @TempData["Mensaje"]
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    }

                    @if (Model.Citas != null && Model.Citas.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Estado</th>
                                        <th>Diagnóstico</th>
                                        <th>Fecha Creación</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cita in Model.Citas)
                                    {
                                        <tr>
                                            <td>@cita.Fecha.ToString("dd/MM/yyyy")</td>
                                            <td>@cita.Hora.ToString(@"hh\:mm")</td>
                                            <td>
                                                @if (cita.Estado == "programada")
                                                {
                                                    <span class="badge badge-warning">Programada</span>
                                                }
                                                else if (cita.Estado == "completada")
                                                {
                                                    <span class="badge badge-success">Completada</span>
                                                }
                                                else if (cita.Estado == "cancelada")
                                                {
                                                    <span class="badge badge-danger">Cancelada</span>
                                                }
                                            </td>
                                            <td>@(string.IsNullOrEmpty(cita.Diagnostico) ? "Sin diagnóstico" : cita.Diagnostico)</td>
                                            <td>@cita.Fecha_Creacion.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @Html.ActionLink("Ver", "DetallesCitas", new { id = cita.Id_Cita }, new { @class = "btn btn-info btn-sm", title = "Ver detalles" })

                                                    @if (cita.Estado == "programada")
                                                    {
                                                        @Html.ActionLink("Editar", "EditarCita", new { id = cita.Id_Cita }, new { @class = "btn btn-warning btn-sm", title = "Editar cita" })
                                                        @Html.ActionLink("Completar", "Completar", new { id = cita.Id_Cita }, new
                                                        {
                                                            @class = "btn btn-success btn-sm",
                                                            title = "Completar cita",
                                                            onclick = "return confirm('¿Está seguro que desea marcar esta cita como completada?')"
                                                        })
                                                        @Html.ActionLink("Cancelar", "Cancelar", new { id = cita.Id_Cita }, new
                                                        {
                                                            @class = "btn btn-danger btn-sm",
                                                            title = "Cancelar cita",
                                                            onclick = "return confirm('¿Está seguro que desea cancelar esta cita?')"
                                                        })
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay citas registradas</h4>
                            <p class="text-muted">Comience creando una nueva cita médica</p>
                            @Html.ActionLink("Crear Primera Cita", "CrearCita", null, new { @class = "btn btn-primary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}
